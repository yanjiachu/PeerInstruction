/* pages/student/course/courseDetail/courseDetail.wxss */
.container {
  padding: 10px;
}

.header {
  display: flex;
  justify-content: flex-start;
  padding: 10px;
  background-color: transparent;
}

.course-name {
  font-size: 30px;
  font-weight: bold;
  margin-left: 0px;
}

.divider-line {
  height: 1px;
  background-color: #ddd;
  margin-top: -1px;
}

.nav-menu {
  display: flex;
  justify-content: space-around;
  padding: 15px 0;
}


.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 18px;
  color: #000000;
}

.course-list-header {
  display: flex;
  justify-content: flex-start;
  padding: 7px 5px 0px;
  background-color: transparent;
}

.course-list-title {
  font-size: 20px;
  font-weight: bold;
}

.class-list-container {
  height: 520px;
  overflow-y: auto;
}

.class-list {
  margin-top: 10px;
}

.class-item {
  margin-bottom: 15px;
}

.date {
  font-size: 16px;
  color: #999;
  margin-bottom: 5px;
}

.session-list {
  border-left: 2px solid #4a90e2;
  padding-left: 10px;
}

.session-item {
  margin-bottom: 10px;
}

.session-time {
  font-size: 14px;
  color: #4a90e2;
}

.session-type {
  display: inline-block;
  background-color: #e0f7fa;
  color: #00796b;
  padding: 2px 5px;
  font-size: 12px;
  border-radius: 5px;
  margin-right: 5px;
}

.session-title {
  font-size: 16px;
  color: #333;
}

.icon {
  width: 40px; 
  height: 30px;
  margin-bottom: 5px;
}

.class-list {
  margin-top: 10px;
}

.class-item {
  margin-bottom: 20px;
}

.date {
  font-size: 16px;
  color: #999;
  margin-bottom: 10px;
  padding-left: 15px;
}

.timeline {
  position: relative;
  margin-left: 20px;
  padding-left: 10px;
  border-left: 2px solid #4a90e2;
}

.timeline-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 10px;
  position: relative;
}

.dot {
  width: 8px;
  height: 8px;
  background-color: #4a90e2;
  border-radius: 50%;
  position: absolute;
  left: -15px;
  top: 6px;
  box-shadow: 0 0 8px rgba(74, 144, 226, 0.8); 
}



.timeline-content {
  padding-left: 10px;
  width: 100%;
}

.session-time {
  font-size: 14px;
  color: #4a90e2;
}

.session-title-box {
  background-color: #f5f5f5;
  border-radius: 10px;
  padding: 8px;
  margin-top: 4px;
  width: calc(100% - 20px);
}

.session-title {
  font-size: 16px;
  color: #333;
}

.tab-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 10px;
  height: 50px;
  position: relative;
}

.tab-bar-left {
  display: flex;
}
.tab-bar-right {
  display: flex;
  justify-content: flex-end; /* 将按钮推到右侧 */
  padding-right: 0px;
}
.add-button {
  width: 50px;
  height: 25px;
  font-size: 20px;
  line-height: 24px;
  text-align: center;
  color: #2196F3;
  background-color: #e6f4ff;
  border: none;
  border-radius: 3px;
}

.empty-message {
  text-align: center;
  font-size: 16px;
  color: #888;
  margin-top: 80px;
}
