/* 容器样式 */
.container {
  padding: 20rpx;
  background-color: #ffe5e5; /* 浅红色背景，与其他页面一致 */
  min-height: 100vh;
  display: flex;
  flex-direction: column;


}

/* 输入框通用样式 */
.form-group {
  width: 100%; /* 宽度占满父容器 */
  margin-bottom: 30rpx; /* 每个输入框下方间距 */
}

.input-title, .input-content {
  width: 100%; /* 输入框宽度 */
  font-size: 32rpx; /* 统一字体大小 */
  padding: 15rpx; /* 内部边距 */
  border: 2rpx solid #ff4d4f; /* 红色边框，与标题样式一致 */
  border-radius: 10rpx; /* 圆角边框 */
  background-color: #ffffff; /* 白色背景 */
  color: #333333; /* 深灰色文字 */
  line-height: 1.5; /* 提高行距 */
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1); /* 轻微阴影 */
}

.input-title {
  height: 80rpx; /* 标题输入框高度 */
}

.input-content {
  height: 300rpx; /* 内容输入框高度 */
  resize: none; /* 禁止拖动调整大小 */
}

/* 输入框的占位符样式 */
.input-title::placeholder,
.input-content::placeholder {
  color: #999999; /* 浅灰色占位符 */
  font-size: 28rpx; /* 占位符字体稍小 */
}

/* 提交按钮样式 */
.text-center {
  text-align: center; /* 按钮居中对齐 */
}

.submit-btn {
  background-color: #ff6666; /* 中等红色，与其他页面按钮一致 */
  color: #ffffff; /* 白色文字 */
  font-size: 32rpx; /* 按钮字体大小 */
  padding: 15rpx 40rpx; /* 内边距 */
  border-radius: 10rpx; /* 圆角设计 */
  box-shadow: 0 3rpx 6rpx rgba(0, 0, 0, 0.2); /* 添加阴影 */
  transition: all 0.3s ease; /* 动画过渡 */
}

/* 按钮点击效果 */
.submit-btn:active {
  background-color: #d32f2f; /* 深红色 */
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.2); /* 阴影减弱 */
}
