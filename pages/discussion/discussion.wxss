/* 容器样式 */
.container {
  padding: 20rpx;
  background-color: #ffe5e5; /* 浅红色背景 */
  min-height: 100vh;
}

/* 标题样式优化 */
.title {
  flex-grow: 1;
  text-align: center;
  font-size: 42rpx; /* 增大字体 */
  color: #d32f2f; /* 深红色 */
  font-weight: bold;
  padding: 10rpx 0;
  letter-spacing: 2rpx; /* 增加字符间距 */
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2); /* 增加阴影 */  border-bottom: 2rpx solid #ff4d4f; /* 下划线装饰 */
}

/* 发布帖子和我的帖子按钮 */
.mybtn {
  display: flex;
  justify-content: space-around;
  margin: 20rpx 0;
}

.btn {
  background-color: #ff6666; /* 中等红色 */
  color: #ffffff;
  font-size: 32rpx;
  padding: 15rpx 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

/* 帖子列表滚动视图 */
.post-list {
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  max-height: 80vh; /* 限制列表高度 */
}

/* 帖子项 */
.post-item {
  background-color: #ffffff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.post-title {
  font-size: 34rpx;
  color: #ff3333; /* 明显的红色标题 */
  font-weight: bold;
  margin-bottom: 10rpx;
}

.post-info {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666666; /* 灰色文本 */
}

.author {
  color: #ff4d4f; /* 红色强调 */
}

.date {
  color: #999999; /* 灰色日期 */
}