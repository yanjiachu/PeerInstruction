<view class="container">
  <!-- 回复内容输入框 -->
  <view class="input-section">
    <textarea class="reply-input" placeholder="请输入回复内容" maxlength="500" bindinput="onInputChange"></textarea>
  </view>

  <!-- 发送回复按钮 -->
  <view class="button-section">
    <button class="send-button" bindtap="onSendReply">发送回复</button>
  </view>
</view>
