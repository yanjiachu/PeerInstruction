.container {
  background-color: rgb(255, 255, 255);
  padding: 20px;
}
.title {
  font-size: 24px;
  font-weight: bold;
  color: rgb(153, 0, 51);
  margin-bottom: 20px;
}
.form-group {
  margin-bottom: 10px;
}
.form-group text {
  display: block;
  font-weight: bold;
  color: rgb(153, 0, 51);
  margin-bottom: 5px;
}
.input {
  width: 100%;
  height: 100%;
  padding: 8px;
  box-sizing: border-box;
  border: 1px solid #ccc;
  border-radius: 6px;
}
.submit-button {
  width: 100%;
  padding: 10px;
  background-color: rgb(2, 102, 37);
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-size: 16px;
  margin-top: 10px;
}
.submit-button:active {
  background-color: #179a17;
}
.selected-questions {
  margin-top: 10px;
  font-size: 16px;
  color: rgb(153, 0, 51);
}