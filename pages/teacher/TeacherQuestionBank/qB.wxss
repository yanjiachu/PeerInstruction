.container {
    display: flex;
    flex-direction: column;
    padding-top: 30rpx;
    padding: auto;
    height: 93vh;
}

/*搜索栏样式*/
.search-container {
    box-sizing: content-box;
    display: flex;
    align-items: center;
    margin-bottom: 10rpx;
    border: 1px solid #1aad19 !important;
    border-radius: 20rpx;
    overflow: hidden;
    height: 100rpx;
}

.tags-input {
    /* flex: 80; */
    z-index: 10;
    background-color: #ffffff;
    flex-shrink: 0;
    border: none;
    outline: none;
    width: 83%;
    display: flex;
    overflow: hidden;
    align-items: flex-start;
    position: relative;
    padding: 0 5px;
    flex-wrap: wrap;
    align-items: center;
    /* height:inherit; */
}

.tag {
    background-color: #e7f5c0;
    padding-left: 5rpx;
    padding-right: 5rpx;
    margin-right: 15rpx;
    margin-bottom: 5px;
    display: flex;
    align-items: center;
    border-radius: 4px;
}

.delete-tag {
    font-size: 14px;
    color: #900;
    cursor: pointer;
    padding: 0px 8px;
    border-radius: 2px;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}

.input-tag {
    flex: 1;
    min-width: 120px;
    border: none;
    outline: none;
    padding: 5px;
    line-height: 20px;
}

.search-button {
    flex: 1;
    position: relative;
    border: 0 #1aad19 !important;
    border-radius: 0 20rpx 20rpx 0;
    background-color: #1aad19;
    cursor: pointer;
    height: inherit;
    justify-content: center;
    align-items: center;
}

.search-icon {
    position: absolute;
    top: 25%;
    left: 25%;
    width: 50%;
    height: 50%;
}

/*搜索文字和添加按钮*/

.search-results {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10rpx 20rpx;
}

.results-count {
    flex: 4;
    font-size: 30rpx;
    color: #333;
    font: bold;
}

.add-button {
    flex: 1;
    height: 70rpx;
    border-radius: 30rpx;
    background-color: #1aad19;
    color: #fff;
    font-size: 25rpx;
}

/*题目列表*/
.qB-icon {
    position: fixed;
    z-index: 0;
    top: 40%;
    left: 30%;
    width: 300rpx;
    height: 350rpx;
}

.list {
    position: relative;
    z-index: 100;
}

.list-item-bank {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding: 20rpx;
    padding-bottom: 28rpx;
    border-bottom: 1rpx solid #ddd;
    background-color: #E6CEAC;
    border-radius: 20rpx;
    margin-bottom: 10rpx;
    height: 150rpx;
}

.item-name {
    flex: 1;
    padding-left: 10rpx;
    padding-top: 10rpx;
    font-size: 26rpx;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
}

.item-image {
    width: 200rpx;
    height: 160rpx;
    padding-right: 10rpx;
    border-radius: 10rpx;
    background-color: #E0E0E0;
}

.showBox {
    padding: 20rpx;
    margin-top: 20rpx;
    border-radius: 25rpx;
    background-color: #BEE7E9;
    overflow-y: auto;
    position: relative;
    border: 8rpx solid black;
    margin-top: 20rpx;
    border-radius: 25rpx;
}

.questionSort {
    width: 50%;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    margin-left: 46%;
    margin-top: 5rpx;
    margin-bottom: 10rpx;
    border: 1px solid #ccc;
    background-color: ivory;
    border-radius: 10rpx;
}

.list-container {
    height: 55vh;
    overflow-y: auto;
    padding: 20rpx;
}