/* pages/teacher/index/index.wxss */
.banner {
  width: 100%;
  height: 150px; /* 轮播图的高度 */
}

.swiper-container {
  width: 100%;
  height: 100%;
}

.swiper-item-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.swiper-image {
  width: 100%;
  height: 240px; /* 图片的高度 */
  object-fit: cover; /* 图片填充方式，适应不同尺寸 */
}

.swiper-text {
  margin-top: 10px;
  color: #333;
  font-size: 16px;
  text-align: center;
}

.tab-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 10px;
  height: 50px;
  position: relative;
}

.tab-bar-left {
  display: flex;
}
.tab-item {
  position: relative;
  font-size: 17px;
  padding: 10px 22px;
  cursor: pointer;
  color: #999;
}

.tab-underline {
  position: absolute;
  margin: 0 auto;
  bottom: -5px;
  left: 0;
  width: 100%;
  height: 4px;
  background-color: #2196F3;
}
.tab-bar-right {
  display: flex;
  justify-content: flex-end; /* 将按钮推到右侧 */
  padding-right: 0px;
}
.add-button {
  width: 50px;
  height: 25px;
  font-size: 20px;
  line-height: 24px;
  text-align: center;
  color: #2196F3;
  background-color: #e6f4ff;
  border: none;
  border-radius: 3px;
}

/* 细灰线 */
.divider-line {
  height: 1px;
  background-color: #ddd;
  margin-top: -1px;
}

/* 课程列表样式 */
.course-list {
  height: 450px;
  overflow-y: auto;
  padding: 10px;
}

.course-card {
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  color: white;
  position: relative;
  height: 100px; 
}

.course-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.course-name {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 5px;
}

.course-id {
  font-size: 14px;
  margin-bottom: 10px; 
}

.course-description-container {
  display: flex;
  justify-content: space-between;
  align-items: flex-end; 
  margin-top: auto; 
}

.course-description {
  font-size: 14px;
  color: #E0F7FA;
  flex: 1;
}

.course-teacher {
  font-size: 14px;
  color: #B2EBF2;
  margin-top: auto; 
}

.course-button {
  position: absolute;
  top: 10px; 
  right: 10px;
  background-color: transparent;
  border: none;
  outline: none;
  cursor: pointer;
}



/* 底部文本样式 */
.footer-text {
  text-align: center;
  color: #999;
  font-size: 14px;
  margin-top: 20px;
}
