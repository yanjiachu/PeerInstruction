/* 容器样式 */
.container {
    padding: 50rpx;
    padding-bottom: 50rpx;
}

/* 问题样式 */
.question {
    margin-bottom: 20rpx;
}

/* 问题文本样式 */
.question-text {
    font-size: 34rpx;
    line-height: 1.5;
    color: #333;
}

/* 问题图片样式 */
.question-image {
    width: 100%;
    height: 300rpx;
    margin: 20rpx 0;
}

/* 选项容器样式 */
.options-container {
    margin-bottom: 20rpx;
}

/* 选项样式 */
.option {
    display: flex;
    width: 100%;
    margin: 20rpx 0;
}

/* 选项前缀样式 */
.option-prefix {
    width: 10%;
    text-align: center;
    font-size: 40rpx;
    font-weight: bold;
    color: #333;
    margin-right: 20rpx;
}

/* 选项按钮样式 */
.option-btn {
    max-width: 500rpx;
    flex-grow: 1;
    background-color: #f8f8f8;
    padding: 20rpx;
    border-radius: 10rpx;
    transition: all 0.3s ease;

}

/* 选项文本样式 */
.option-text {
    font-size: 35rpx;
    line-height: 1.5;
    color: #333;
    word-wrap: break-word;
    white-space: normal;
    text-align: left;
}

/* 按钮样式 */
.submit-btn {
    width: 100%;
    background-color: #1aad19;
    color: #fff;
    border-radius: 10rpx;
    padding: 20rpx;
    font-size: 34rpx;
    text-align: center;
    margin: 15rpx 0;
}

.submit-btn:active {
    background-color: #138e16;
}

.submit-btn:disabled {
    background-color: #ccc;
    color: #666;
    cursor: not-allowed;
    border: 1rpx black;
}

.separator {
    height: 3rpx;
    background-color: #ddd;
    margin: 20rpx 0;
}

.otherProperty {
    font-size: 34rpx;
    line-height: 1.5;
    color: #333;
    display: flex;
    flex-direction: column;
}